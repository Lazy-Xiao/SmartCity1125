<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

        <EditText
            android:id="@+id/logined1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:ems="10"
            android:text="dzy123"
            android:inputType="textPersonName"
            android:hint="用户账号"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/logined2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="密码"
            android:text="123456"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/logined1"
            app:layout_constraintStart_toStartOf="@+id/logined1"
            app:layout_constraintTop_toBottomOf="@+id/logined1" />

        <Button
            android:id="@+id/loginbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="登录"
            app:layout_constraintEnd_toEndOf="@+id/logined2"
            app:layout_constraintStart_toStartOf="@+id/logined2"
            app:layout_constraintTop_toBottomOf="@+id/logined2" />
    </androidx.constraintlayout.widget.ConstraintLayout>