<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.me.meFragment"
    android:padding="30dp">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/meimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/meimage"
        app:layout_constraintStart_toStartOf="@+id/meimage"
        app:layout_constraintTop_toBottomOf="@+id/meimage" />

    <Button
        android:id="@+id/mebt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="个人设置"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/mebt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的订单"
        app:layout_constraintEnd_toEndOf="@+id/mebt1"
        app:layout_constraintStart_toStartOf="@+id/mebt1"
        app:layout_constraintTop_toBottomOf="@+id/mebt1" />

    <Button
        android:id="@+id/mebt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        app:layout_constraintEnd_toEndOf="@+id/mebt1"
        app:layout_constraintStart_toStartOf="@+id/mebt1"
        app:layout_constraintTop_toBottomOf="@+id/mebt2" />
    <Button
        android:id="@+id/mebt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        app:layout_constraintEnd_toEndOf="@+id/mebt1"
        app:layout_constraintStart_toStartOf="@+id/mebt1"
        app:layout_constraintTop_toBottomOf="@+id/mebt3" />

</androidx.constraintlayout.widget.ConstraintLayout>